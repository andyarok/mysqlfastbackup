<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m="urn:import:gwt.material.design.client.ui" 
	xmlns:p="urn:import:org.apache.xpath.patterns"
	xmlns:ma="urn:import:gwt.material.design.addins.client" 
	xmlns:f="urn:import:gwt.material.design.addins.client.fileuploader" xmlns:d="urn:import:com.google.gwt.dom.client">
	<ui:style>
		.header{
			padding-top:8%;
		}
		
		.dataContainer{
			overflow: auto;
		}
	</ui:style>
	<g:HTMLPanel>
			<m:MaterialPanel addStyleNames="{style.header}">
				<ma:stepper.MaterialStepper axis="HORIZONTAL" shadow="1" ui:field="stepper">
				<ma:stepper.MaterialStep step="1" title="Select Database" description="Select database(s) to backup">
						<m:MaterialPanel width="100%" >
					 		<m:MaterialCollection ui:field="itemContainer" addStyleNames="{style.dataContainer}" />
					 	</m:MaterialPanel>
						<m:MaterialButton ui:field="nextBtn" text="Select Destination" grid="l4" marginLeft="20" marginTop="20" textColor="WHITE" waves="DEFAULT"/>
						<m:MaterialButton ui:field="cancelBtn" text="Cancel" grid="l4" marginLeft="20" marginTop="20" textColor="WHITE" waves="DEFAULT"/>
				</ma:stepper.MaterialStep>
				<ma:stepper.MaterialStep step="2" title="Select Destination" description="Select destination to save backup">
						<m:MaterialPanel width="100%" >
							<m:MaterialCard backgroundColor="LIGHT_BLUE" ui:field="browseCard">
								<m:MaterialCardContent>
									<m:MaterialLink iconPosition="LEFT" textColor="WHITE" iconColor="WHITE" text="Click here to select folder" ui:field="browseIcon" 
									iconType="FOLDER" waves="LIGHT"></m:MaterialLink>
								</m:MaterialCardContent>
								<m:MaterialCardAction>
									<g:HTMLPanel >
										<input id="selector" type="file" nwdirectory="" style="width: 0"/>
									</g:HTMLPanel>
									<m:MaterialLabel ui:field="locText" text=""></m:MaterialLabel>		
								</m:MaterialCardAction>
							</m:MaterialCard>
							 	
						</m:MaterialPanel>
						<m:MaterialButton ui:field="saveBtn" text="Save"></m:MaterialButton>
						
				</ma:stepper.MaterialStep>
				<ma:stepper.MaterialStep step="3" title="Saving Database" description="Saving Database to the selected location">
						<m:MaterialPanel width="100%" >
							<m:MaterialProgress ui:field="progressBar" type="DETERMINATE" percent="5" />
							<m:MaterialLabel ui:field="statusText" text=""></m:MaterialLabel>
					 	</m:MaterialPanel>
					 	<m:MaterialButton visible="false" ui:field="homeBtn" text="Home" grid="l4" marginLeft="20" marginTop="20" textColor="WHITE" waves="DEFAULT"/>
						<m:MaterialButton visible="false" ui:field="exitBtn" text="Exit" grid="l4" marginLeft="20" marginTop="20" textColor="WHITE" waves="DEFAULT"/>
				</ma:stepper.MaterialStep>
				</ma:stepper.MaterialStepper>
 			</m:MaterialPanel>
	</g:HTMLPanel>
</ui:UiBinder> 