<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
		.mainPanel{
			border-radius: 7px;
			/*-webkit-box-shadow: 4px 10px 46px 28px rgba(0,0,0,0.75);
			-moz-box-shadow: 4px 10px 46px 28px rgba(0,0,0,0.75);
			box-shadow: 4px 10px 46px 28px rgba(0,0,0,0.75);*/
		}
		.errorMsg{
			padding-top: 30px;
			text-align:center;
			color: red;
		}
		.content{
			margin: 20px;
		}
		
	</ui:style>
	<g:HTMLPanel >
		<m:MaterialPanel ui:field="mPanel" addStyleNames="{style.mainPanel}">
			<m:MaterialRow addStyleNames="{style.content}">
				<m:MaterialLabel text="Please provide the credentials to communicate with MySQL" paddingBottom="10"></m:MaterialLabel>
				<m:MaterialTextBox ui:field="nameField" label="MySQL user name"></m:MaterialTextBox>
				<m:MaterialTextBox ui:field="passwordField" type="PASSWORD" label="MySQL password"></m:MaterialTextBox>
				<m:MaterialTextBox ui:field="dbField" label="Database (Optional)"></m:MaterialTextBox>
				<m:MaterialCheckBox grid="m1 s2" offset="0" ui:field="remmemberCkBox" text="Remember"></m:MaterialCheckBox>
				<m:MaterialLabel ui:field="errorLbl" addStyleNames="{style.errorMsg}"></m:MaterialLabel>
				<m:MaterialButton ui:field="okBtn" text="OK"></m:MaterialButton>
			</m:MaterialRow>
		</m:MaterialPanel>
	</g:HTMLPanel>
</ui:UiBinder> 